<h2>Course List</h2>
<header>
            <div class="menu">
                <img src="../img/avatar-1.png" alt="Avatar" class="avatar">
                <div class= "list">
                <a href="/menupage">Profile</a>
                <a href="/course">Modules</a>
                <a href="/coursework">Coursework</a>
                </div>
              </div>
              
</header>
<table class= "table table-striped">
        <thead>
            <th>Module Name</th>
            <th>No. of Coursework</th>
            <th>Description</th>
            <th>Module Leads Email</th>s
            <th></th>
        </thead>
        <tbody>
            {{#each courselist}}
            <tr>
                <td>{{this.moduleName}}</td>
                <td>{{this.noOfCoursework}}</td>
                <td>{{this.description}}</td>
                <td>{{this.moduleLeadsEmail}}</td>
            <td>
                <a href="/course/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/course/delete/{{this._id}}" onclick="return confirm(' Are you sure you want to delete ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
                
            </td>              
             </tr>
            {{/each}}
        </tbody>
    </table>
    <a href="/addcourse"><button>Add Course</button></a>
    {{{body}}}